---
layout: base.njk
title: Office Mice
---

<section class="relative overflow-hidden bg-green-900 text-white">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center space-y-4">
    <p class="uppercase tracking-[0.3em] text-xs text-blue-200">IT Office Equipment</p>
    <h1 class="text-4xl font-bold">Collections</h1>
    <p class="text-gray-200">Silent, rechargeable, and wired essentials for every desk.</p>
  </div>
</section>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <a href="/products/it-office/" class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-800 transition">&#8592; Back to IT Equipment</a>
</div>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
  <div class="mb-8">
    <label class="block text-gray-700 font-semibold mb-2" for="mouse-search">Search mouse lineup</label>
    <div class="relative">
      <input id="mouse-search" type="text" placeholder="Type to filter mice..." class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 filter-input" data-filter-list="mouse-card">
      <span class="absolute right-4 top-3 text-gray-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M11 19a8 8 0 1 1 0-16 8 8 0 0 1 0 16z"/></svg>
      </span>
    </div>
  </div>
  <div class="grid gap-8 md:grid-cols-3">
    {% set mice = [
      {title:"Logitech Wireless Mouse", price:"RWF 25,000", desc:"Silent wireless mouse with long battery life.", img:"/assets/product/landing/mouse6.jpeg"},
      {title:"Amazon Basics Wireless Mouse", price:"RWF 22,000", desc:"LED mouse with Bluetooth 5.2, 2.4G dongle, and rechargeable battery.", img:"/assets/product/landing/mouse.jpeg"},
      {title:"Wireless Mouse", price:"RWF 15,000", desc:"Universal wireless mouse for laptops and desktops.", img:"/assets/product/landing/mouse5.jpeg"},
      {title:"Wired Mouse", price:"RWF 6,000", desc:"USB wired mouse with precise optical sensor.", img:"/assets/product/landing/wired.jpeg"},
      {title:"VGA Cable 2M", price:"RWF 4,500", desc:"2-meter VGA lead for desktop-to-monitor connections in tight spaces.", img:"/assets/product/landing/vga 2m.jpeg"},
      {title:"VGA Cable 10M", price:"RWF 12,000", desc:"Extended 10-meter VGA run for classrooms and projector ceilings.", img:"/assets/product/landing/vga.jpeg"},
      {title:"VGA TO HDMI", price:"RWF 6,000", desc:"Compact converter that feeds legacy VGA sources into HDMI displays.", img:"/assets/product/landing/VGA to HDMI.jpeg"},
      {title:"Printer cable", price:"RWF 6,000", desc:"High-quality USB printer cable for dependable office printing.", img:"/assets/product/landing/printer cable.jpeg"},
      {title:"USB TO HDMI", price:"RWF 6,000", desc:"Adapter that mirrors laptops via USB-A into modern HDMI screens.", img:"/assets/product/landing/USB to HDMI.jpeg"},
      {title:"HDMI TO VGA", price:"RWF 6,000", desc:"Active HDMI output to VGA display converter with crisp signal.", img:"/assets/product/landing/VGA TO HDMI.jpeg"},
      {title:"HDMI 2M", price:"RWF 5,000", desc:"Everyday 2-meter HDMI cable for workstations and TVs.", img:"/assets/product/landing/HDMI.jpeg"},
      {title:"HDMI 10M", price:"RWF 15,000", desc:"Long-distance 10-meter HDMI cable for conference rooms.", img:"/assets/product/landing/HDMI.jpeg"},
      {title:"HDMI 15M", price:"RWF 20,000", desc:"15-meter HDMI run with reinforced shielding for crystal visuals.", img:"/assets/product/landing/HDMI.jpeg"},
      {title:"HDMI 20M", price:"RWF 25,000", desc:"20-meter HDMI link for auditorium projectors or wall-mounted panels.", img:"/assets/product/landing/HDMI.jpeg"},
      {title:"HDMI 30M", price:"RWF 40,000", desc:"Extra-long 30-meter HDMI cable ideal for training centers.", img:"/assets/product/landing/HDMI.jpeg"},
      {title:"USB TO USB", price:"RWF 6,000", desc:"Reliable USB-A to USB-A cable for data transfer and peripheral sync.", img:"/assets/product/landing/USB to USB.jpeg"},
      {title:"Adjustable Laptop Stand", price:"RWF 19,000", desc:"Aluminum riser with multi-angle positions to cool laptops and improve posture.", img:"/assets/product/landing/stand1.jpg"}
    ] %}
    {% for item in mice %}
    {% set slug = item.title | slug %}
    <div id="item-{{ slug }}" class="bg-white rounded-2xl border border-gray-200 shadow-lg overflow-hidden flex flex-col mouse-card" data-search-entry data-search-title="{{ item.title }}" data-search-category="Office Mice" data-search-description="{{ item.desc }} {{ item.price }}" data-search-url="{{ page.url }}#item-{{ slug }}">
      <img src="{{ item.img }}" alt="{{ item.title }}" class="h-48 w-full object-cover">
      <div class="p-6 space-y-3 flex-1 flex flex-col">
        <h2 class="text-xl font-semibold text-gray-900">{{ item.title }}</h2>
        <p class="text-gray-600 flex-1">{{ item.desc }}</p>
        <span class="text-blue-600 font-bold">{{ item.price }}</span>
        <button
          type="button"
          class="mt-auto inline-flex items-center justify-center gap-2 w-full border border-gray-300 text-gray-900 font-semibold px-4 py-2 rounded-lg hover:border-gray-400 hover:-translate-y-0.5 transition"
          data-cart-toggle
          data-cart-id="{{ page.url }}-{{ slug }}"
          data-cart-title="{{ item.title }}"
          data-cart-price="{{ item.price }}"
          data-cart-desc="{{ item.desc }}"
          data-cart-img="{{ item.img }}"
          data-cart-category="Mouse & Extensions"
          data-cart-url="{{ page.url }}#item-{{ slug }}"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13l-1.35 4.05A1 1 0 0 0 6.6 18h11.8M7 13L5 5m2 13a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm10 0a2 2 0 1 0 .001 4.001A2 2 0 0 0 17 18z"></path>
          </svg>
          <span data-cart-label>Add to WhatsApp cart</span>
        </button>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const input = document.querySelector('#mouse-search');
    const cards = document.querySelectorAll('.mouse-card');
    input.addEventListener('input', () => {
      const q = input.value.toLowerCase();
      cards.forEach(card => card.style.display = card.innerText.toLowerCase().includes(q) ? '' : 'none');
    });
  });
</script>
